{% extends 'layoutLogin.twig' %}

{% block body %}
<header>
    <h1>Editar Producto</h1>
</header>
<nav>   
    <a href="{{irAdm}}">Volver</a>
</nav>
<div class="container">
    <div class="contentForm">
        <h2>Formulario de Producto</h2>
        <form id="productForm">
            <label for="productName">Nombre del Producto:</label>
            <input type="text" id="productName" name="productName" required>

            <label for="stock">Stock:</label>
            <input type="number" id="stock" name="stock" required>

            <label for="price">Precio:</label>
            <input type="number" id="price" name="price" step="0.01" required>

            <label for="arrivalDate">Fecha de Llegada:</label>
            <input type="date" id="arrivalDate" name="arrivalDate" required>

            <label for="description">Descripci√≥n:</label>
            <textarea id="description" name="description" required></textarea>

            <button type="button" onclick="editProduct()">Guardar Producto</button>
        </form>
    </div>
</div>

<script src="/javascripts/scriptEditProduct.js"></script>
{% endblock %}